
<h1>Eat-Da-Burger!</h1>


<div class="row">
  <div class="col-6">
<h2>Burgers waiting to be devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
  <div class="col-6" id="devoured-column">
<h2>Burgers devoured! </h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>
    <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked> Devour it!<br>
    <input type="radio" name="devoured" value="1"> Waiting to devour!
  </div>

  
  <button class="btn btn-primary" type="submit">Add burger</button>
</form>
